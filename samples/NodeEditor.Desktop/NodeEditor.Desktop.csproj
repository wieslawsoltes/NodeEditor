<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net7.0</TargetFramework>
    <IsPackable>False</IsPackable>
    <Nullable>enable</Nullable>
    <ApplicationIcon>..\NodeEditor.Base\Assets\Icon.ico</ApplicationIcon>
    <RootNamespace>NodeEditorDemo</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <AvaloniaResource Include="Assets\**" />
  </ItemGroup>

  <Import Project="..\..\build\Base.props" />
  <Import Project="..\..\build\ReferenceAssemblies.props" />
  <Import Project="..\..\build\Avalonia.Desktop.props" />

  <ItemGroup>
    <ProjectReference Include="..\NodeEditor.Base\NodeEditor.Base.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Update="Avalonia.Desktop" Version="11.0.0-preview7" />
  </ItemGroup>

</Project>
